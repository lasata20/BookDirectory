extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg SignUp to create an account
      form.form.form--signup#signupForm(action='/signup', method='POST')
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', name='name', placeholder='Full Name', required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', name='email', placeholder='you@example.com', required)
        .form__group
          label.form__label(for='role') Role
          input#role.form__input(type='text', name='role', placeholder='Your role')
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', name='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='confirmPassword') Confirm Password
          input#confirmPassword.form__input(type='password', name='confirmPassword', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green(type='submit') SignUp
